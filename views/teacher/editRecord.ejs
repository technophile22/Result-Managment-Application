<div class="container-fluid">
	<a
		href="/teacher/viewRecords"
		class="btn btn-outline-secondary"
		id="backButton"
		>Back</a
	>
	<%- include("../partials/error.ejs") %>
	<h4>
		<% if(typeof student !== 'undefined' && student.name) { %>
		<div>Edit Record for Student : <%= student.name %></div>
	</h4>
	<form method="POST" class="student-form" autocomplete="off">
		<div class="mb-3">
			<label for="rollNumber" class="form-label">Roll Number : </label>
			<input
				type="number"
				name="rollNumber"
				class="form-control"
				id="rollNumber"
				required="required"
				value="<%= student.rollNumber  %>"
			/>
		</div>

		<div class="mb-3">
			<label for="name" class="form-label">Name : </label>
			<input
				type="text"
				name="name"
				required
				class="form-control"
				id="name"
				value="<%= student.name %>"
			/>
		</div>

		<div class="mb-3">
			<label for="dob" class="form-label">Date of Birth : </label>
			<input
				type="date"
				name="dob"
				class="form-control"
				id="dob"
				required="required"
				value="<%= student.dob.toISOString().slice(0, 10); %>"
			/>
		</div>

		<div class="mb-3">
			<label for="score" class="form-label">Score : </label>
			<input
				type="number"
				name="score"
				required
				class="form-control"
				id="score"
				value="<%= student.score %>"
			/>
		</div>

		<div style="margin-top: 20px">
			<a
				><button type="submit" class="btn btn-outline-success">
					Submit
				</button></a
			>
			<a href="/teacher/viewRecords" class="btn btn-outline-primary"
				>View All</a
			>
			<div style="float: right"></div>
		</div>
	</form>
	<% } %> <%- include("../partials/error.ejs") %>
</div>
