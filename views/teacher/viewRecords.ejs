<div class="container-fluid">
	<div style="float: right">
		<a href="/teacher/addRecord">
			<button class="btn btn-outline-success btn-lg" id="backButton">
				Add Student
			</button>
		</a>
	</div>
	<a href="/" class="btn btn-outline-secondary" id="backButton">Back</a>

	<h4>All Student Records</h4>

	<div class="table-responsive-sm">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Roll Number</th>
					<th scope="col">Name</th>
					<th scope="col">Date of Birth</th>
					<th scope="col">Score</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% students.forEach(student => { %>
				<tr class="head">
					<td><%= student.rollNumber %></td>
					<td><%= student.name %></td>
					<td><%= student.dob.toLocaleDateString() %></td>
					<td><%= student.score %></td>
					<td>
						<a href="/teacher/editRecord/<%= student._id %> "
							><i class="bi bi-pen"></i
						></a>
						&ensp;
						<a href="/teacher/deleteRecord/<%= student._id %> "
							><i class="bi bi-trash"></i
						></a>
					</td>
				</tr>
				<%}) %>
			</tbody>
		</table>
	</div>
</div>
